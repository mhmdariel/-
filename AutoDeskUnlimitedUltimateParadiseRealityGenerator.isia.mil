fernet = Fernet(FERNET_KEY)

# In-memory policy and underlying secrets
POLICY = {'alpha': {'threshold': 2, 'approvers': ['alice','bob','carol']}}
UNDERLYING = {'alpha':'1111111111111111111111'}
CIPHERTEXTS = {k: fernet.encrypt(v.encode()) for k,v in UNDERLYING.items()}

# Generate ephemeral approver keys
APPROVERS = {}
for name in ['alice','bob','carol']:
    priv = ec.generate_private_key(ec.SECP256R1())
    APPROVERS[name] = {'priv': priv, 'pub': priv.public_key()}

def canonical(request_id: str, item_id: str, requester: str, timestamp: int) -> bytes:
    return f"{request_id}|{item_id}|{requester}|{timestamp}".encode("utf-8")

def sign_with_ecdsa(priv: ec.EllipticCurvePrivateKey, message: bytes) -> str:
    sig = priv.sign(message, ec.ECDSA(hashes.SHA256()))
    return base64.b64encode(sig).decode("ascii")

def verify_ecdsa_signature(pub: ec.EllipticCurvePublicKey, message: bytes, b64sig: str) -> bool:
    try:
        sig = base64.b64decode(b64sig)
        pub.verify(sig, message, ec.ECDSA(hashes.SHA256()))
        return True
    except InvalidSignature:
        return False

class UnmaskRequest:
    def __init__(self, item_id: str, requester: str, reason: str):
        self.item_id = item_id
        self.requester = requester
        self.reason = reason
        self.request_id = secrets.token_hex(8)
        self.created_at = int(time.time())
        self.approvals: Dict[str, str] = {}
        self.completed = False

    def to_dict(self):
        return {
            "request_id": self.request_id,
            "item_id": self.item_id,
            "requester": self.requester,
            "reason": self.reason,
            "created_at": self.created_at,
            "approvals": list(self.approvals.keys()),
            "completed": self.completed,
        }

def create_request(item_id: str, requester: str, reason: str) -> UnmaskRequest:
