import struct
import sys

def encode_instruction(instr):
    if len(instr) != 4:
        raise Exception("Instruction must be exactly 4 chars.")
    return b"".join(struct.pack(">I", ord(c)) for c in instr)

if __name__ == "__main__":
    outfile = sys.argv[1]
    with open(outfile, "wb") as f:
        for line in sys.stdin:
            line=line.strip()
            if line:
                f.write(encode_instruction(line))

