"""
Safe simulation of an authorized "unmask" workflow.

- Underlying secrets (the '1' strings) are stored in memory encrypted with a symmetric key (demo only).
- Masked view shows only "0" and an item id.
- Unmask requests require:
    * a requester identity
    * a list of approver identities (must meet required threshold)
    * a reason
- When approval threshold satisfied, the system logs the event and returns the secret to approved principals only.
- This demo uses HMAC signatures (via hashlib) to simulate signed approvals; in a production system use proper PKI and KMS/HSM.
"""

import hashlib
import hmac
import json
import time
import secrets
from typing import Dict, Any, List, Tuple

# ----------------------------
# Demo storage & config
# ----------------------------

# demo symmetric key for "encryption" (do NOT use in production)
DEMO_SYM_KEY = b"demo_sym_key_please_replace"

# sensitivity thresholds: item_id -> (threshold, approver_set)
SENSITIVITY_POLICIES = {
    # item 'alpha' needs 2-of-3 approvals
    "alpha": {"threshold": 2, "approvers": {"alice", "bob", "carol"}},
    # item 'beta' needs 1-of-2 approvals
    "beta": {"threshold": 1, "approvers": {"dave", "erin"}},
}

# In-memory "encrypted" store of underlying strings; we store ciphertext only.
# In real system you'd use KMS/HSM and real encryption (AES-GCM) with proper keys.
UNDERLYING_STORE: Dict[str, bytes] = {}

# Audit log (append-only)
AUDIT_LOG: List[Dict[str, Any]] = []

# Helper: HMAC "encryption" (demo only)
def demo_encrypt(plaintext: str) -> bytes:
    # In demo we will return HMAC(key, plaintext) + plaintext hashed, *not* secure encryption.
    mac = hmac.new(DEMO_SYM_KEY, plaintext.encode("utf-8"), hashlib.sha256).digest()
    return mac + plaintext.encode("utf-8")  # demo only

def demo_decrypt(ciphertext: bytes) -> str:
    # Validate HMAC and extract plaintext (demo)
    mac = ciphertext[:32]
    txt = ciphertext[32:].decode("utf-8")
    expected = hmac.new(DEMO_SYM_KEY, txt.encode("utf-8"), hashlib.sha256).digest()
    if not hmac.compare_digest(mac, expected):
        raise ValueError("Integrity check failed")
    return txt

# Initialize two demo items
UNDERLYING_STORE["alpha"] = demo_encrypt("111111111111111111")  # underlying '1' string for alpha
UNDERLYING_STORE["beta"]  = demo_encrypt("11111")                # underlying '1' string for beta

# ----------------------------
# Request/approval primitives
# ----------------------------

def make_approval_signature(approver_id: str, request_id: str, secret: bytes) -> str:
    """Simulate a signed approval using HMAC(approver_id || request_id || secret)."""
    msg = (approver_id + "|" + request_id).encode("utf-8")
    sig = hmac.new(secret, msg, hashlib.sha256).hexdigest()
    return sig

def verify_approval_signature(approver_id: str, request_id: str, sig: str, secret: bytes) -> bool:
    expected = make_approval_signature(approver_id, request_id, secret)
    return hmac.compare_digest(expected, sig)

# ----------------------------
# Unmask request lifecycle
# ----------------------------

class UnmaskRequest:
    def __init__(self, item_id: str, requester: str, reason: str):
        self.item_id = item_id
        self.requester = requester
        self.reason = reason
        self.request_id = secrets.token_hex(8)
        self.created_at = int(time.time())
        self.approvals: Dict[str, str] = {}  # approver_id -> signature
        self.completed = False

    def add_approval(self, approver_id: str, signature: str):
        self.approvals[approver_id] = signature

def create_unmask_request(item_id: str, requester: str, reason: str) -> UnmaskRequest:
    if item_id not in SENSITIVITY_POLICIES:
        raise ValueError("Unknown item or policy")
    req = UnmaskRequest(item_id, requester, reason)
    # Log creation event
    AUDIT_LOG.append({
        "event": "create_request",
        "request_id": req.request_id,
        "item_id": item_id,
        "requester": requester,
        "reason": reason,
        "time": req.created_at,
    })
    return req

def submit_approval(req: UnmaskRequest, approver_id: str, approver_secret: bytes, signature: str):
    policy = SENSITIVITY_POLICIES[req.item_id]
    if approver_id not in policy["approvers"]:
        raise ValueError("Approver not authorized for this item")
    if not verify_approval_signature(approver_id, req.request_id, signature, approver_secret):
        raise ValueError("Signature verification failed")
    req.add_approval(approver_id, signature)
    AUDIT_LOG.append({
        "event": "approval",
        "request_id": req.request_id,
        "approver": approver_id,
        "time": int(time.time()),
    })

def try_complete_request(req: UnmaskRequest) -> Tuple[bool, str]:
    """
    If approvals meet threshold, decrypt and return the underlying '1' string.
    Returns (completed_bool, plaintext_or_error).
    """
    policy = SENSITIVITY_POLICIES[req.item_id]
    threshold = policy["threshold"]
    if req.completed:
        return False, "Already completed"
    if len(req.approvals) < threshold:
        return False, f"Need {threshold} approvals; have {len(req.approvals)}"
    # All checks passed: perform unmask (decrypt)
    ciphertext = UNDERLYING_STORE.get(req.item_id)
    if ciphertext is None:
        return False, "No underlying item found"
    plaintext = demo_decrypt(ciphertext)  # in production use KMS decrypt with audited key access
    # Record audit entry
    AUDIT_LOG.append({
        "event": "unmask",
        "request_id": req.request_id,
        "item_id": req.item_id,
        "requester": req.requester,
        "approvers": list(req.approvals.keys()),
        "time": int(time.time()),
    })
    req.completed = True
    return True, plaintext

# ----------------------------
# Demo scenario
# ----------------------------

def demo_flow():
    # Secrets for approvers (demo only — in real life approvers have private keys)
    approver_secrets = {
        "alice": b"alice_demo_secret",
        "bob":   b"bob_demo_secret",
        "carol": b"carol_demo_secret",
        "dave":  b"dave_demo_secret",
        "erin":  b"erin_demo_secret",
    }

    # Request creation
    req = create_unmask_request("alpha", requester="zoe", reason="investigation (demo)")
    print("Created request", req.request_id)

    # Approvers sign
    sig_alice = make_approval_signature("alice", req.request_id, approver_secrets["alice"])
    submit_approval(req, "alice", approver_secrets["alice"], sig_alice)
    print("Alice approved")

    sig_bob = make_approval_signature("bob", req.request_id, approver_secrets["bob"])
    submit_approval(req, "bob", approver_secrets["bob"], sig_bob)
    print("Bob approved")

    # Try to complete
    ok, out = try_complete_request(req)
    print("Complete attempt:", ok, out)

    # Show audit log entries related to this request
    related = [e for e in AUDIT_LOG if e.get("request_id")==req.request_id]
    print("Audit entries for request:")
    print(json.dumps(related, indent=2))

if __name__ == "__main__":
    demo_flow()


