# Utility helpers
def cp_to_utf8(cp):
    return chr(cp)

def make_instr(seed_int):
    # deterministic pseudo-random generator from seed
    rnd = random.Random(seed_int)
    # choose pattern: letter letter digit digit, or letter digit digit digit etc
    patterns = [
        ('L','L','D','D'),
        ('L','D','L','D'),
        ('L','L','L','D'),
        ('L','D','D','D'),
    ]
    p = rnd.choice(patterns)
    chars = []
    for t in p:
        if t == 'L':
            cp = rnd.choice(ARABIC_LETTERS)
        else:
            cp = rnd.choice(EASTERN_DIGITS)
        chars.append(cp_to_utf8(cp))
    return ''.join(chars)

def sha_short(text, length=10):
    h = hashlib.sha256(text.encode('utf-8')).hexdigest()
    return h[:length]

def ensure_dir(p):
    if not os.path.exists(p):
        os.makedirs(p, exist_ok=True)

def write_file(path, content):
    ensure_dir(os.path.dirname(path))
    with open(path, 'w', encoding='utf-8') as f:
        f.write(content)

def current_ts():
    return datetime.utcnow().strftime('%Y-%m-%d %H:%M:%SZ')

# --- Core site builder ---
class QASMSite:
    def __init__(self, outdir):
        self.out = outdir
        ensure_dir(self.out)
        ensure_dir(os.path.join(self.out,'pages'))
        ensure_dir(os.path.join(self.out,'css'))
        ensure_dir(os.path.join(self.out,'js'))
        self.history = []  # list of page filenames
        # load existing pages if present
        self._scan_existing()

    def _scan_existing(self):
        pages_dir = os.path.join(self.out,'pages')
        if not os.path.exists(pages_dir): return
        files = sorted(os.listdir(pages_dir))
        self.history = [f for f in files if f.endswith('.html')]

    def init_assets(self):
        write_file(os.path.join(self.out,'css','style.css'), CSS)
        write_file(os.path.join(self.out,'js','site.js'), JS)
        # create initial manual/index if not present
        if not os.path.exists(os.path.join(self.out,'index.html')):
            self.build_index()

    def build_index(self):
        page_list_html = ''
        for f in sorted(self.history, reverse=True)[0:200]:
            title = html.escape(f)
            page_list_html += f'<li><a href="pages/{f}">{title}</a></li>\n'
        content = HTML_INDEX_TEMPLATE.format(
            page_list = page_list_html,
            generated_at = current_ts()
        )
        write_file(os.path.join(self.out,'index.html'), content)

    def write_iteration(self, iter_num):
        # look at existing content to "reflect"
        page_count = len(self.history)
        seed = (iter_num << 16) ^ (page_count * 1315423911)
        instr = make_instr(seed)
        ts = current_ts()
        # compute a checksum of concatenated filenames and instr to serve as "self signature"
        concat = '|'.join(self.history) + '|' + instr + '|' + ts
        checksum = hashlib.sha256(concat.encode('utf-8')).hexdigest()
        checksum_short = checksum[:12]
        fname = f'iter-{iter_num:05d}.html'
        html_page = HTML_PAGE_TEMPLATE.format(
            title = f'صفحة التوليد {iter_num}',
            iter_num = iter_num,
            ts = ts,
            page_count = page_count,
            checksum = checksum,
            checksum_short = checksum_short,
            instr = instr
        )
        write_file(os.path.join(self.out,'pages',fname), html_page)
        self.history.append(fname)
        # rebuild index and sitemap and rss
        self.build_index()
        self.build_sitemap()
        self.build_rss()
        print(f"[{ts}] Generated {fname} instr={instr} checksum={checksum_short}")

    def build_sitemap(self):
        entries = []
        base = './'
        # index
        now = current_ts()
        entries.append(f"""  <url><loc>{base}index.html</loc><lastmod>{now}</lastmod></url>""")
        for f in self.history:
            path = f'pages/{f}'
            entries.append(f"""  <url><loc>{base}{path}</loc><lastmod>{now}</lastmod></url>""")
        sitemap = SITEMAP_TEMPLATE.format(entries='\n'.join(entries))
        write_file(os.path.join(self.out,'sitemap.xml'), sitemap)

    def build_rss(self):
        items = []
        baseurl = './'
        now = datetime.utcnow().strftime('%a, %d %b %Y %H:%M:%S +0000')
        for idx,f in enumerate(reversed(self.history[-50:]), start=1):
            url = baseurl + 'pages/' + f
            items.append(RSS_ITEM_TEMPLATE.format(title=f, url=url, pubdate=now, iter_num=idx))
        feed = f"""<?xml version="1.0" encoding="utf-8"?>\n<rss version="2.0">\n<channel>\n<title>QASM procedural feed</title>\n<link>./index.html</link>\n{''.join(items)}</channel>\n</rss>"""
        write_file(os.path.join(self.out,'feed.xml'), feed)

# --- CLI and runner ---
def main():
    ap = argparse.ArgumentParser(description="QASM procedural website grower")
    ap.add_argument('--out', '-o', default='site', help='output site directory (will be created)')
    ap.add_argument('--max-iterations', '-m', type=int, default=0, help='max iterations (0 = run until interrupted)')
    ap.add_argument('--delay', '-d', type=float, default=0.2, help='delay seconds between iterations (so you can watch growth)')
    args = ap.parse_args()

    site = QASMSite(args.out)
    site.init_assets()

    start_iter = 1
    # if there are existing pages, continue from last
    if site.history:
        # parse highest iter num
        last = site.history[-1]
        try:
            n = int(last.split('-')[1].split('.')[0])
            start_iter = n + 1
        except Exception:
            start_iter = len(site.history) + 1

    try:
        i = start_iter
        while True:
            site.write_iteration(i)
            i += 1
            if args.max_iterations and i > (start_iter + args.max_iterations - 1):
                print("Reached max iterations; exiting.")
                break
            time.sleep(args.delay)
    except KeyboardInterrupt:
        print("Interrupted by user; site generation stopped.")
        site.build_index()
        site.build_sitemap()
        site.build_rss()
        print("Finalized site at:", os.path.abspath(args.out))

if __name__ == '__main__':
    main()

