def encrypt_with_kms(plaintext: str) -> str:
    """
    Envelope-encrypt a string using AWS KMS.
    """
    resp = kms.encrypt(
        KeyId=KMS_KEY_ID,
        Plaintext=plaintext.encode(),
        EncryptionContext={"UnmaskDemo": "true"}
    )
    return base64.b64encode(resp["CiphertextBlob"]).decode()

def decrypt_with_kms(ciphertext_b64: str, context: dict):
    resp = kms.decrypt(
        CiphertextBlob=base64.b64decode(ciphertext_b64),
        EncryptionContext=context
    )
    return resp["Plaintext"].decode()

def main():
    secret = "1111111111111111111"
    ct = encrypt_with_kms(secret)
    print("Ciphertext:", ct)

    pt = decrypt_with_kms(ct, {"UnmaskDemo": "true"})
    print("Plaintext:", pt)

