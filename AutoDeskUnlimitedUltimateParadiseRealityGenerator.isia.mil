# Reference assembler/VM (Python 3) - illustrative
# NOT executed here; drop into a .py to run.

MAX_RUN = 255

# parse a unary-ASM line like "1110111" -> [3,1,3] (# of ones per field)
def parse_unary_line(line):
    if any(c not in '10' for c in line.strip()):
        raise ValueError("INVALID_CHAR")
    if line[0]=='0' or line[-1]=='0':
        raise ValueError("BAD_DELIMITER")
    parts = line.strip().split('0')
    runs = [len(p) for p in parts]
    for k in runs:
        if k==0: raise ValueError("BAD_TOKEN")
        if k>MAX_RUN: raise ValueError("RUN_LENGTH_TOO_LONG")
    return runs

# assemble many lines -> bytes
def assemble_unary(lines, opcode_table):
    out = bytearray()
    for ln in lines:
        runs = parse_unary_line(ln)
        opcode = runs[0]
        if opcode not in opcode_table:
            raise ValueError("UNKNOWN_OPCODE")
        expected = opcode_table[opcode]['operands']
        if len(runs)-1 != expected:
            raise ValueError("OPERAND_COUNT_MISMATCH")
        for k in runs:
            out.append(k & 0xFF)
    return bytes(out)

# simple VM with minimal opcodes implemented
def run_vm(code_bytes):
    mem = bytearray(256)
    R = [0]*16
    pc = 0
    Z = False
    def push(v):
        nonlocal R, mem
        R[15] -= 1
        mem[R[15]] = v & 0xFF
    def pop():
        nonlocal R, mem
        v = mem[R[15]]
        R[15]+=1
        return v
    while pc < len(code_bytes):
        op = code_bytes[pc]; pc+=1
        if op==1: continue
        elif op==2: break
        elif op==3:
            dst = code_bytes[pc]; src = code_bytes[pc+1]; pc+=2
            R[dst-1] = R[src-1]
        elif op==4:
            dst = code_bytes[pc]; imm = code_bytes[pc+1]; pc+=2
            R[dst-1] = imm
        elif op==27:
            r = code_bytes[pc]; pc+=1
            R[r-1] = (R[r-1] + 1) & 0xFFFFFFFF
        elif op==7:
            dst = code_bytes[pc]; src = code_bytes[pc+1]; pc+=2
            R[dst-1] = (R[dst-1] + R[src-1]) & 0xFFFFFFFF
        elif op==23:
            # RET: pop PC from stack (we store return addresses manually)
            pc = pop()
        else:
            raise RuntimeError(f"unknown op {op}")
    return R, mem


