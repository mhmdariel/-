// test_unmask.c
// Compile: gcc -o test_unmask test_unmask.c bit_unmask.o
#include <stdio.h>
#include <stdint.h>
#include <stdlib.h>
#include <string.h>

// Prototype for the asm function (adjust if you modified calling convention)
extern uint64_t find_zero_and_expand(void *buf, uint64_t nbytes, uint64_t *out_mask, uint64_t *out_runlen);

/*
 We'll offer a simple pure-C implementation (reference) and a test runner.
*/
uint64_t find_zero_and_expand_c(void *buf, uint64_t nbytes, uint64_t *out_mask, uint64_t *out_runlen) {
    uint8_t *b = (uint8_t*)buf;
    uint64_t total_bits = nbytes * 8;
    for (uint64_t bit = 0; bit < total_bits; ++bit) {
        uint64_t byte_index = bit >> 3;
        uint8_t bit_in_byte = bit & 7;
        int bitval = (b[byte_index] >> bit_in_byte) & 1;
        if (bitval == 0) {
            // expand left
            uint64_t left = bit;
            while (left > 0) {
                uint64_t nb = left - 1;
                uint64_t bi = nb >> 3;
                uint8_t bi_in = nb & 7;
                if (((b[bi] >> bi_in) & 1) == 1) left = nb;
                else break;
            }
