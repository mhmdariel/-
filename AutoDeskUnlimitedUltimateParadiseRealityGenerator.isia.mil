import boto3
import json
import os
import base64
from datetime import datetime

kms = boto3.client("kms")
dynamodb = boto3.client("dynamodb")

KMS_KEY_ID = os.environ["KMS_KEY_ID"]

def lambda_handler(event, context):
    """
    event example:
    {
        "request_id": "abcd1234",
        "ciphertext_b64": "<base64 ciphertext>",
        "request_tags": { "UnmaskRequest": "true" }
    }
    """

    ciphertext = base64.b64decode(event["ciphertext_b64"])
    request_id = event["request_id"]

    # KMS decrypt (tag-restricted)
    response = kms.decrypt(
        CiphertextBlob=ciphertext,
        EncryptionContext={"RequestId": request_id},
        GrantTokens=[],
        EncryptionAlgorithm='SYMMETRIC_DEFAULT'  # safe default
    )

    plaintext = response["Plaintext"].decode()

    # Put audit entry
    dynamodb.put_item(
        TableName="unmask-requests",
        Item={
            "request_id": {"S": request_id},
            "ts": {"N": str(int(datetime.utcnow().timestamp()))},
            "event": {"S": "kms_decrypt"},
            "message": {"S": "Decrypt performed using authorized tags"}
        }
    )

    return {
        "status": "ok",
        "plaintext": plaintext
    }

