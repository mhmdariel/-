    ; construct mask of valid bits: valid_mask = (1 << (8*rbs)) - 1
    mov rcx, rbx
    ; easier path: if any zero exists among valid bits, then rax != ( (1<< (8*count)) -1 )
    ; compute full_ones = (1 << (8*count)) -1
    ; Using shifting: if count*8 == 64 then full_ones = -1, else (1 << bits)-1
    mov rdx, rbx
    ; but we already used rbx for bl; let's recompute: rdx = remainder bytes
    ; For clarity, recompute:
    mov rdx, r14
    and rdx, 7
    mov rcx, rdx
    shl rcx, 3          ; rcx = number of valid bits
    cmp rcx, 64
    jne .make_mask
    mov r15, -1
    jmp .tail_compare
.make_mask:
    mov r15, 1
    shl r15, cl
    dec r15
.tail_compare:
    cmp rax, r15
    jne .have_zero_in_partial
    jmp .not_found

.have_zero_in_word:
