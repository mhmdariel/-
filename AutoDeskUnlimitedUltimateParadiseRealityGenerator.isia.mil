global find_zero_and_expand
section .text

find_zero_and_expand:
    push rbp
    push rbx
    push r12
    push r13
    push r14
    push r15

    mov r8, rdi        ; buf
    mov r9, rsi        ; nbytes
    mov r10, rdx       ; out_mask
    mov r11, rcx       ; out_runlen

    xor r12, r12       ; bit index = 0

    mov rax, r9
    shl rax, 3
    mov r13, rax       ; total bits

.loop_bits:
    cmp r12, r13
    jae .not_found

    mov rax, r12
    shr rax, 3
    mov rbx, rax
    movzx r14d, byte [r8 + rbx]

    mov rax, r12
    and rax, 7
    mov rcx, rax

    mov rdx, r14
    shr rdx, cl
    and rdx, 1
    cmp rdx, 0
    jne .advance

    ; FOUND ZERO BIT ------------

    xor r14, r14       ; left count
    cmp r12, 0
    je .left_done
    mov r15, r12
    dec r15

.left_loop:
    mov rax, r15
    shr rax, 3
    mov rbx, rax
    movzx rdx, byte [r8 + rbx]

    mov rax, r15
    and rax, 7
    mov rcx, rax

    mov rsi, rdx
    shr rsi, cl
    and rsi, 1
    cmp rsi, 1
    jne .left_done

    inc r14
    cmp r15, 0
    je .left_done
    dec r15
    jmp .left_loop

.left_done:

    xor rbx, rbx       ; right count
    mov r15, r12
    inc r15

.right_loop:
    cmp r15, r13
    jae .right_done

    mov rax, r15
    shr rax, 3
    mov rdx, rax
    movzx rdx, byte [r8 + rdx]

    mov rax, r15
    and rax, 7
    mov rcx, rax

    mov rsi, rdx
    shr rsi, cl
    and rsi, 1
    cmp rsi, 1
    jne .right_done

    inc rbx
    inc r15
    jmp .right_loop

.right_done:
    mov rax, r14
    add rax, rbx
    mov r14, rax       ; runlen

    mov rdx, 0
    cmp r14, 64
    jae .mask_full
    cmp r14, 0
    je .mask_zero
    mov rcx, r14
    mov rax, 1
    shl rax, cl
    dec rax
    mov rdx, rax
    jmp .mask_done

.mask_full:
    mov rdx, -1
    jmp .mask_done

.mask_zero:
    mov rdx, 0

.mask_done:
    mov [r10], rdx
    mov [r11], r14
    mov rax, r12

    pop r15
    pop r14
    pop r13
    pop r12
    pop rbx
    pop rbp
    ret

.advance:
    inc r12
    jmp .loop_bits

.not_found:
    mov qword [r10], 0
    mov qword [r11], 0
    mov rax, -1

    pop r15
    pop r14
    pop r13
    pop r12
    pop rbx
    pop rbp
