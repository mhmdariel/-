// --------- Utility: base64 decode ----------
static std::string base64_decode(const std::string &in) {
    std::string out;
    std::vector<int> T(256, -1);
    for (int i = 0; i < 64; i++) T["ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/"[i]] = i;
    int val = 0, valb = -8;
    for (unsigned char c : in) {
        if (T[c] == -1) break;
        val = (val << 6) + T[c];
        valb += 6;
        if (valb >= 0) {
            out.push_back(char((val >> valb) & 0xFF));
            valb -= 8;
        }
    }
    return out;
}

// --------- Utility: zlib inflate ----------
static std::string zlib_inflate(const std::string &data) {
    std::string out;
    z_stream zs;
    memset(&zs, 0, sizeof(zs));
    if (inflateInit(&zs) != Z_OK) {
        throw runtime_error("inflateInit failed");
    }
    zs.next_in = reinterpret_cast<Bytef*>(const_cast<char*>(data.data()));
    zs.avail_in = (uInt)data.size();

    int ret;
    char buffer[4096];
    do {
        zs.next_out = reinterpret_cast<Bytef*>(buffer);
        zs.avail_out = sizeof(buffer);
        ret = inflate(&zs, 0);
        if (out.size() < zs.total_out) {
            out.append(buffer, zs.total_out - out.size());
        }
    } while (ret == Z_OK);

    inflateEnd(&zs);
    if (ret != Z_STREAM_END) {
        throw runtime_error("inflate failed: " + to_string(ret));
    }
    return out;
}

// --------- Utility: write file safely ----------
static void write_file(const fs::path &p, const std::string &content) {
    fs::create_directories(p.parent_path());
    std::ofstream ofs(p, ios::binary);
    if (!ofs) throw runtime_error("Failed to open file for writing: " + p.string());
    ofs.write(content.data(), (std::streamsize)content.size());
    ofs.close();
}

