; bit_unmask.asm
; NASM x86-64 implementation of:
;   find_zero_and_expand(void *buf, uint64_t nbytes)
; Returns:
;   RAX = zero_bit_index (0-based)  -- undefined if not found
;   RDX = contiguous-ones-mask (LSB aligns with lowest bit of the run)
;   RCX = run_length (number of 1 bits in the contiguous run)
;   RDI = pointer to buffer (input), RSI = nbytes (input)
;
; ABI: System V AMD64
; Assemble: nasm -felf64 bit_unmask.asm
; Link with C harness.

global find_zero_and_expand
section .text

; Helper note:
; We scan 64-bit words for a word != 0xFFFFFFFFFFFFFFFF (i.e., has at least one zero bit).
; For a found word W at word_index:
;   inverted = ~W
;   low_zero_mask = inverted & -inverted  ; isolates least-significant zero bit
;   bit_pos_in_word = ctz(low_zero_mask)  ; position 0..63
; Then expand left/right within the buffer: we check adjacent bits within the word,
; and if needed move to previous/next words to extend the run.
; For simplicity and speed we expand across words but limit the returned mask to 64 bits;
; RCX will hold the total run length (possibly >64), RDX contains first up-to-64 bits as mask.

; x86-64 doesn't have immediate ctz instruction in pure NASM; use bsf (bit scan forward).
; We'll use bsf to find index of LSB in a 64-bit.

find_zero_and_expand:
    ; Inputs: RDI = buf ptr, RSI = nbytes
    ; Outputs: RAX = zero_bit_index (in bits), RDX = mask, RCX = run_length
    push rbp
    push rbx
    push r12
    push r13
    push r14
    push r15

    mov r12, rdi        ; r12 = buf pointer
    xor r13, r13        ; r13 = word_index (64-bit words scanned)
    xor rax, rax
    xor rdx, rdx
    xor rcx, rcx

    ; compute number of 64-bit words = nbytes / 8
    mov r14, rsi
    mov r15, 8
    xor rbx, rbx
    mov rbx, r14
    shr rbx, 3          ; rbx = nwords
    ; r14 still nbytes for remainder handling later

    test rbx, rbx
    jz .scan_tail       ; if no full words, scan tail bytes

.scan_words:
    ; load [r12 + r13*8] into rax
    mov rax, [r12 + r13*8]
    ; compare to 0xFFFFFFFFFFFFFFFF
    mov rdx, -1
    cmp rax, rdx
    jne .have_zero_in_word
    ; else advance
    inc r13
    dec rbx
    jnz .scan_words
    ; none in full words; handle remaining bytes
.scan_tail:
    ; handle remaining bytes (less than 8 bytes at end)
    mov rbx, r14
    and rbx, 7          ; rbx = remainder bytes
    test rbx, rbx
    jz .not_found       ; no remainder -> not found
    ; build a 64-bit word from remaining bytes (little-endian)
    xor rax, rax
    mov rcx, 0
    mov rsi, rbx        ; count
    mov rdi, r12
    add rdi, r13
    shl r13, 3
    add rdi, r13        ; rdi = pointer to tail start (in bytes)
    ; We'll load byte-by-byte into rax
    mov rbx, 0
    mov rcx, 0
    .tail_loop:
        mov bl, byte [rdi + rcx]
        movzx rdx, bl
        shl rdx, cl     ; shift left by cl bits
        or rax, rdx
        add rcx, 8
        cmp rcx, rsi
        jl .tail_loop
