# signer.py (client-side approver)
from cryptography.hazmat.primitives import hashes, serialization
from cryptography.hazmat.primitives.asymmetric import ec
import base64

# Load private key (for demo, PEM in file). In prod use HSM / secure element.
with open("approver_priv.pem", "rb") as f:
    priv = serialization.load_pem_private_key(f.read(), password=None)

def canonical_string(request_id: str, item_id: str, requester: str, timestamp: int) -> bytes:
    # deterministically construct message for signing
    return f"{request_id}|{item_id}|{requester}|{timestamp}".encode("utf-8")

def sign_request(request_id, item_id, requester, timestamp):
    msg = canonical_string(request_id, item_id, requester, timestamp)
    sig = priv.sign(msg, ec.ECDSA(hashes.SHA256()))
    return base64.b64encode(sig).decode("ascii")

# Example usage
# print(sign_request("req-123", "alpha", "zoe", 1700000000))

B. Server-side verification (Approval Service)
# verifier.py (server-side)
from cryptography.hazmat.primitives.asymmetric import ec
from cryptography.hazmat.primitives import hashes, serialization
from cryptography.exceptions import InvalidSignature
import base64

# Load approver public key (registered in directory). Use certificate chain validation in prod.
with open("approver_pub.pem", "rb") as f:
    pub = serialization.load_pem_public_key(f.read())

def verify_signature(pubkey, request_id, item_id, requester, timestamp, b64sig):
    msg = f"{request_id}|{item_id}|{requester}|{timestamp}".encode("utf-8")
    sig = base64.b64decode(b64sig)
    try:
        pubkey.verify(sig, msg, ec.ECDSA(hashes.SHA256()))
        return True
    except InvalidSignature:
        return False

