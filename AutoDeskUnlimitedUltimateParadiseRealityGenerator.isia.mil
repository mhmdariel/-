    mov     %rsi, %r13      # r13 = nbytes
    mov     %rdx, %r14      # r14 = out_mask_ptr
    mov     %rcx, %r15      # r15 = out_runlen_ptr

    xor     %rax, %rax
    xor     %rbx, %rbx
    xor     %r9, %r9

    # nwords = nbytes / 8
    mov     %r13, %rax
    shr     $3, %rax        # rax = nwords
    test    %rax, %rax
    jz      .scan_tail

    # loop over full 64-bit words
    xor     %rbx, %rbx      # rbx = word_index
1:
    cmp     %rbx, %rax
    jae     .scan_tail
    mov     (%r12, %rbx, 8), %r10    # load word into r10
    mov     $-1, %r11
    cmp     %r10, %r11
    jne     .word_has_zero
    inc     %rbx
    jmp     1b

.word_has_zero:
    # inverted = ~word
    mov     %r10, %r9
    not     %r9
    # isolate least-significant '1' in inverted (i.e., LSB zero of original)
    mov     %r9, %r13
    neg     %r13
    and     %r9, %r13
    # find index of that bit (bsf)
    bsf     %r13, %rsi    # rsi = bit position within word (0..63)
    # absolute bit index = rbx*64 + rsi
    mov     %rbx, %rax
    shl     $6, %rax
    add     %rsi, %rax

    # compute left_mask = word & ((1<<bitpos)-1)
    # compute (1<<bitpos) into rdx
    mov     $0, %rdx
    cmp     $0, %rsi
    je      .left_zero_mask
    mov     $1, %rdx
    mov     %rsi, %rcx
    shl     %cl, %rdx
    dec     %rdx
.left_zero_mask:
    mov     %r10, %rcx
    and     %rdx, %rcx    # rcx = lowbits
    # count trailing ones in lowbits -> left_len
    # trailing ones count can be computed by: left_len = ctz(~lowbits & (lowbits+1))? simpler: loop small
    xor     %rsi, %rsi
    mov     %rcx, %rdi
.left_count_loop:
    test    $1, %rdi
    jz      .left_count_done
    inc     %rsi
    shr     $1, %rdi
    jmp     .left_count_loop
.left_count_done:
    mov     %rsi, %r8     # r8 = left_len

    # compute right_mask = word >> (bitpos+1)
    mov     %r10, %rdi
    mov     %r9, %rcx     # r9 contains inverted previously but not used now; recompute bitpos
    mov     %rsi, %rcx    # careful: rsi now holds left_len, not bitpos. We need bitpos still: preserve earlier; to simplify, we recompute bitpos using rax % 64:
    mov     %rax, %rcx
    and     $63, %rcx
    mov     %rcx, %rsi    # rsi = bitpos
    mov     %rcx, %rcx
    inc     %rsi          # rsi = bitpos + 1
    shr     %cl, %rdi     # right_mask in rdi
    xor     %r9, %r9
.right_count_loop:
    test    $1, %rdi
    jz      .right_count_done
    inc     %r9
    shr     $1, %rdi
    jmp     .right_count_loop
.right_count_done:
    mov     %r9, %r9      # r9 = right_len

    # total within-word run = left_len + right_len
    mov     %r8, %rdx
    add     %rdx, %r9
    mov     %r9, %r10     # r10 = run_len_within_word

    # build mask = (1<<min(run_len,64)) -1
    mov     %r10, %rcx
    cmp     $64, %rcx
    jae     .mask_full_x86
    test    %rcx, %rcx
    jz      .mask_zero_x86
    mov     $1, %rdi
    shl     %cl, %rdi
    dec     %rdi
    mov     %rdi, %rdx
    jmp     .mask_done_x86
.mask_full_x86:
    mov     $-1, %rdx
    jmp     .mask_done_x86
.mask_zero_x86:
    mov     $0, %rdx
.mask_done_x86:
    # store outputs
    test    %r14, %r14
    je      .no_mask_store_x86
    mov     %rdx, (%r14)
.no_mask_store_x86:
    test    %r15, %r15
    je      .no_run_store_x86
    mov     %r10, (%r15)
.no_run_store_x86:

    pop     %r15
    pop     %r14
    pop     %r13
    pop     %r12
    pop     %rbx
    pop     %rbp
    ret

.scan_tail:
    # handle remaining bytes <8 (naive scan byte-by-byte), find zero bit if any. Implementation omitted for brevity, fallback to bitwise scan in wrapper instead.
    # Return -1 to let wrapper perform full scan if needed.
    mov     $-1, %rax
    test    %r14, %r14
    je      .no_mask_store_x862
    movq    $0, (%r14)
.no_mask_store_x862:
    test    %r15, %r15
    je      .no_run_store_x862
    movq    $0, (%r15)
.no_run_store_x862:
    pop     %r15
    pop     %r14
    pop     %r13
    pop     %r12
    pop     %rbx
    pop     %rbp
    ret


Notes about this file

It returns the index of the zero bit quickly by scanning whole words and using bsf on the inverted word.

The function computes within-word left/right counts by looping on single-bit operations (portable and small). The returned mask/runlen cover only that word — this is much faster than bit-by-bit across the entire buffer because word scan short-circuits long stretches of 1s.

A C wrapper (extend_wrapper.c below) performs cross-word extension to compute the full contiguous run as needed.

2) opt_arm64.s — optimized AArch64 assembly

This assembly performs equivalent operations on ARM64 (AArch64) using 64-bit loads and rbit + clz or ctz equivalents. It exposes the same symbol find_zero_word_arm64.

    .text
    .global find_zero_word_arm64
    .type find_zero_word_arm64, %function

// find_zero_word_arm64(void *buf, uint64_t nbytes, uint64_t *out_mask, uint64_t *out_runlen)
// Returns word-local mask and runlen; R0=buf, R1=nbytes, R2=out_mask, R3=out_runlen
// Returns X0 = absolute bit index or -1 if not found.

find_zero_word_arm64:
    // Save callee-saved registers if needed (not doing heavy register save here)
    // We'll implement basic loop scanning u64 words.

    // Move inputs to local regs
    mov     x4, x0      // x4 = buf
    mov     x5, x1      // x5 = nbytes
    mov     x6, x2      // x6 = out_mask
    mov     x7, x3      // x7 = out_runlen

    // nwords = nbytes >> 3
    lsr     x8, x5, #3

    cbz     x8, .scan_tail_arm

    mov     x9, #0      // word_index

1_arm:
    cmp     x9, x8
    b.ge    .scan_tail_arm
    ldr     x10, [x4, x9, lsl #3]    // load word
    mov     x11, #-1
    cmp     x10, x11
    b.ne    .have_zero_arm
    add     x9, x9, #1
    b       1_arm

.have_zero_arm:
    // inverted = ~x10
    mvn     x12, x10
    // isolate lowest set bit: low = x12 & (-x12)
    neg     x13, x12
    and     x13, x12, x13
    // find index: tzcnt equivalent is 'rbit + clz' or use 'ctz' via builtin: on ARMv8.2 there is 'rbit' then 'clz' trick:
    // Use __builtin_ctzll equivalent: use 'rbit' then clz to get index of LSB.
    rbit    x14, x13
    clz     x14, x14
    // x14 now bitpos within word
    // absolute index = x9 * 64 + x14
    mov     x0, x9
    lsl     x0, x0, #6
    add     x0, x0, x14

    // Now compute left and right counts within word (simple loops)
    // left: inspect bits below bitpos
    mov     x15, #0   // left_count
    cbz     x14, .left_done_arm
    // pos = x14 - 1 .. loop
    sub     x16, x14, #1
.left_loop_arm:
    // test bit at pos x16: (word >> pos) & 1
    mov     x17, x10
    lsr     x17, x17, x16
    and     x17, x17, #1
    cmp     x17, #1
    b.ne  .left_done_arm
    add     x15, x15, #1
    cbz     x16, .left_done_arm
    sub     x16, x16, #1
    b       .left_loop_arm
.left_done_arm:

    // right_count
    mov     x18, #0
    add     x16, x14, #1
.right_loop_arm:
    // if pos >= 64 break
    cmp     x16, #64
    b.hs  .right_done_arm
    mov     x17, x10
    lsr     x17, x17, x16
    and     x17, x17, #1
    cmp     x17, #1
    b.ne  .right_done_arm
    add     x18, x18, #1
    add     x16, x16, #1
    b     .right_loop_arm
.right_done_arm:
    // run_len = left + right
    add     x19, x15, x18

    // mask = (1<<min(run_len,64))-1
    cmp     x19, #64
    b.hs .mask_full_arm
    cbz     x19, .mask_zero_arm
    mov     x20, #1
    lsl     x20, x20, x19
    sub     x20, x20, #1
    b  .mask_done_arm
.mask_full_arm:
    mov     x20, #-1
    b .mask_done_arm
.mask_zero_arm:
    mov     x20, #0
.mask_done_arm:
    // store outputs
    str     x20, [x6]
    str     x19, [x7]
    ret

.scan_tail_arm:
    // fallback: no full words; return -1
    mov     x0, #-1
    ret


Notes

This ARM64 implementation follows the same idea: scan 64-bit words, isolate LSB zero using mvn + and with negation, find bit index via rbit+clz, then count left/right within word.

As with x86, the wrapper in C can extend the within-word run across adjacent words to compute the full run.

3) extend_wrapper.c — C wrapper to compute the full contiguous run

This wrapper calls either find_zero_word_x86 or find_zero_word_arm64 (the asm functions), and then extends across neighboring words in C to compute the full contiguous run length and build a mask for the lower 64-bits of that run.

Save as extend_wrapper.c:

#include <stdint.h>
#include <stddef.h>
#include <stdio.h>
#include <string.h>

// Assembly functions (choose the one you built)
extern uint64_t find_zero_word_x86(void *buf, uint64_t nbytes, uint64_t *out_mask, uint64_t *out_runlen);
extern uint64_t find_zero_word_arm64(void *buf, uint64_t nbytes, uint64_t *out_mask, uint64_t *out_runlen);

// safe C extension: given index and within-word left/right counts, expand across adjacent words
// Parameters:
//   buf, nbytes: full buffer
//   init_zero_idx: absolute zero bit index discovered
//   init_mask: 64-bit mask of ones within word (LSB = lowest bit in run within word)
//   init_runlen: run length found within that word
// Returns full_runlen and fills mask64 and zero_index_out as needed.

uint64_t extend_run_full(void *buf, uint64_t nbytes, uint64_t init_zero_idx, uint64_t init_runlen, uint64_t *out_mask64) {
    if (init_zero_idx == (uint64_t)-1) {
        if (out_mask64) *out_mask64 = 0;
        return 0;
    }
    uint8_t *b = (uint8_t*)buf;
    uint64_t total_bits = nbytes * 8;
    // find run_low and run_high by walking outward
    // find initial run_low and run_high using init_zero_idx and init_runlen: we don't have run_low directly; compute by scanning left
    uint64_t bit = init_zero_idx;
    // find run_low
    uint64_t run_low = bit;
    while (run_low > 0) {
        uint64_t nb = run_low - 1;
        uint64_t bi = nb >> 3;
        uint8_t bi_in = nb & 7;
        if (((b[bi] >> bi_in) & 1) == 1) run_low = nb;
        else break;
    }
    // find run_high
    uint64_t run_high = bit + 1;
    while (run_high < total_bits) {
        uint64_t bi = run_high >> 3;
        uint8_t bi_in = run_high & 7;
        if (((b[bi] >> bi_in) & 1) == 1) run_high++;
        else break;
    }
    uint64_t run_len = 0;
    if (run_high >= run_low) run_len = run_high - run_low + 1;
    // produce mask64 for lowest 64 bits of the run (aligned to run_low)
    uint64_t mask64 = 0;
    uint64_t max_mask_bits = run_len < 64 ? run_len : 64;
    for (uint64_t i = 0; i < max_mask_bits; ++i) mask64 |= (1ULL << i);
    if (out_mask64) *out_mask64 = mask64;
    return run_len;
}

4) ref_c.c — reference C implementation (correctness baseline)

Save as ref_c.c:

#include <stdint.h>
#include <stddef.h>

// reference function to find zero and full run in pure C
uint64_t find_zero_and_expand_c(void *buf, uint64_t nbytes, uint64_t *out_mask, uint64_t *out_runlen) {
    uint8_t *b = (uint8_t*)buf;
    uint64_t total_bits = nbytes * 8;
    for (uint64_t bit = 0; bit < total_bits; ++bit) {
        uint64_t byte_index = bit >> 3;
        uint8_t bit_in_byte = bit & 7;
        int bitval = (b[byte_index] >> bit_in_byte) & 1;
        if (bitval == 0) {
            uint64_t left = bit;
            while (left > 0) {
                uint64_t nb = left - 1;
                uint64_t bi = nb >> 3;
                uint8_t bi_in = nb & 7;
                if (((b[bi] >> bi_in) & 1) == 1) left = nb;
                else break;
            }
            uint64_t run_low = left;
            uint64_t right = bit + 1;
            while (right < total_bits) {
                uint64_t bi = right >> 3;
                uint8_t bi_in = right & 7;
                if (((b[bi] >> bi_in) & 1) == 1) right++;
                else break;
            }
            uint64_t run_high = right - 1;
            uint64_t run_len = 0;
            if (run_high >= run_low) run_len = run_high - run_low + 1;
            uint64_t mask = 0;
            for (uint64_t i = 0; i < run_len && i < 64; ++i) mask |= (1ULL << i);
            if (out_mask) *out_mask = mask;
            if (out_runlen) *out_runlen = run_len;
            return bit;
        }
    }
    if (out_mask) *out_mask = 0;
    if (out_runlen) *out_runlen = 0;
    return (uint64_t)-1;
}

5) bench.c — benchmark harness

This compares the pure C reference vs the optimized asm+wrapper. Save as bench.c:

#define _POSIX_C_SOURCE 199309L
#include <stdio.h>
#include <stdint.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>

extern uint64_t find_zero_and_expand_c(void *buf, uint64_t nbytes, uint64_t *out_mask, uint64_t *out_runlen);
extern uint64_t find_zero_word_x86(void *buf, uint64_t nbytes, uint64_t *out_mask, uint64_t *out_runlen);
extern uint64_t find_zero_word_arm64(void *buf, uint64_t nbytes, uint64_t *out_mask, uint64_t *out_runlen);
extern uint64_t extend_run_full(void *buf, uint64_t nbytes, uint64_t init_zero_idx, uint64_t init_runlen, uint64_t *out_mask64);

static double now_sec() {
    struct timespec ts;
    clock_gettime(CLOCK_MONOTONIC, &ts);
    return ts.tv_sec + ts.tv_nsec * 1e-9;
}

int main(int argc, char **argv) {
    size_t nbytes = 1024*1024; // 1 MiB buffer
    if (argc > 1) nbytes = strtoull(argv[1], NULL, 10);
    uint8_t *buf = malloc(nbytes);
    if (!buf) return 1;
    // fill buffer with ones (0xFF) except insert a single zero bit deep in the buffer
    memset(buf, 0xFF, nbytes);
    size_t zero_bit = (nbytes*8)/2; // middle
    size_t byte_idx = zero_bit >> 3;
    int bit_in = zero_bit & 7;
    buf[byte_idx] &= ~(1u << bit_in);

    uint64_t mask, runlen, idx;
    double t0, t1;

    // C reference
    t0 = now_sec();
    idx = find_zero_and_expand_c(buf, nbytes, &mask, &runlen);
    t1 = now_sec();
    printf("C-ref: idx=%llu runlen=%llu mask=0x%016llx time=%.6f s\n",
           (unsigned long long)idx, (unsigned long long)runlen, (unsigned long long)mask, t1-t0);

    // x86 optimized word scan + extend
    t0 = now_sec();
    uint64_t wmask, wrun;
    uint64_t widx = find_zero_word_x86(buf, nbytes, &wmask, &wrun);
    uint64_t full_mask = 0;
    uint64_t full_run = extend_run_full(buf, nbytes, widx, wrun, &full_mask);
    t1 = now_sec();
    printf("opt-x86: idx=%llu init_run=%llu init_mask=0x%016llx full_run=%llu full_mask=0x%016llx time=%.6f s\n",
           (unsigned long long)widx, (unsigned long long)wrun, (unsigned long long)wmask,
           (unsigned long long)full_run, (unsigned long long)full_mask, t1-t0);

    // arm64 optimized (if compiled on arm)
    t0 = now_sec();
    uint64_t aidx = find_zero_word_arm64(buf, nbytes, &wmask, &wrun);
    uint64_t afull = extend_run_full(buf, nbytes, aidx, wrun, &full_mask);
    t1 = now_sec();
    printf("opt-arm: idx=%llu init_run=%llu full_run=%llu time=%.6f s\n",
           (unsigned long long)aidx, (unsigned long long)wrun, (unsigned long long)afull, t1-t0);

    free(buf);
    return 0;
}

