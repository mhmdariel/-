            // find lowest bit of run:
            uint64_t run_low = left;
            // expand right
            uint64_t right = bit + 1;
            while (right < total_bits) {
                uint64_t bi = right >> 3;
                uint8_t bi_in = right & 7;
                if (((b[bi] >> bi_in) & 1) == 1) right++;
                else break;
            }
            uint64_t run_high = right - 1;
            uint64_t run_len = 0;
            if (run_high >= run_low) run_len = run_high - run_low + 1;
            // produce mask limited to 64 bits starting at run_low
            uint64_t mask = 0;
            for (uint64_t i = 0; i < run_len && i < 64; ++i) {
                mask |= (1ULL << i);
            }
            *out_mask = mask;
            *out_runlen = run_len;
            return bit; // zero bit index
        }
    }
    *out_mask = 0;
    *out_runlen = 0;
    return (uint64_t)-1; // not found
