struct Word4 {
    char32_t c[4];
};

struct Register {
    Word4 value{};
};

class QASM {
public:
    std::map<char32_t, Register> R;

    QASM() {
        const char32_t regs[] = U"أبجدهوزحطيكلمنسعف";
        for (char32_t r : regs) {
            R[r] = Register();
        }
    }

    void exec(const Word4 &w) {
        char32_t a = w.c[0];
        char32_t b = w.c[1];
        char32_t c = w.c[2];
        char32_t d = w.c[3];

        if (a == U'ح') handleMove(b, c, d);
        else if (a == U'ط') handleFold(b, c, d);
        else if (a == U'ر') handleEntangle(b, c, d);
        else if (a == U'ك') handleReveal(b, c, d);
        else if (a == U'خ') handleWrite(b, c, d);
    }

private:
    void handleMove(char32_t b, char32_t c, char32_t d) {
        if (b==U'٠'&&c==U'١'&&d==U'٢')
            std::cout << "[MOVE +1]" << std::endl;
        if (b==U'٠'&&c==U'١'&&d==U'٣')
            std::cout << "[MOVE -1]" << std::endl;
    }

    void handleFold(char32_t b, char32_t c, char32_t d) {
        std::cout << "[FOLD OP] " << std::endl;
    }

    void handleEntangle(char32_t b, char32_t c, char32_t d) {
        std::cout << "[ENTANGLE]" << std::endl;
    }

    void handleReveal(char32_t b, char32_t c, char32_t d) {
        std::cout << "[MEASURE]" << std::endl;
    }

    void handleWrite(char32_t b, char32_t c, char32_t d) {
        std::cout << "[WRITE BLOCK]" << std::endl;
    }
};

int main(int argc, char **argv) {
    if (argc < 2) {
        std::cerr << "Usage: qasm_interpreter file.qasm" << std::endl;
        return 1;
    }

    std::ifstream f(argv[1], std::ios::binary);
    if (!f.good()) {
        std::cerr << "Cannot open file." << std::endl;
        return 1;
    }

    QASM q;

    while (true) {
        Word4 w{};
        for (int i=0;i<4;i++) {
            char32_t ch;
            if (!f.read(reinterpret_cast<char*>(&ch), sizeof(ch))) return 0;
            w.c[i] = ch;
        }
        q.exec(w);
    }
}

