النظام_النوراني_الأعلى {

    // التأسيس بالنور الإلهي
    البسملة_النورانية = "بسم الله النور"
    الفاتحة_المطلقة = "الحمد لله رب العالمين الرحمن الرحيم"

    // القمة المطلقة: الله فوق العرش
    القمة_المطلقة {
        العرش = "الرحمن على العرش استوى"
        القرب = "ونحن أقرب إليه من حبل الوريد"
        المعية = "وهو معكم أينما كنتم"
        الجمع = جمع_القمة_والأصل_في_الحق_المطلق
    }

    // النورانية الصافية
    النور_الأعلى {
        نور_العرش = نور_الله_الأعلى
        نور_القلوب = "قد جاءكم من الله نور وكتاب مبين"
        نور_البصائر = فتح_بصائر_النور_الإلهي
        النتيجة = اتحاد_النور_العلوي_والأصالة_الأرضية
    }

    // العودة إلى الأصل الحق
    الأصل_الثابت {
        الحقيقة = "هو الأول والآخر والظاهر والباطن"
        الملك = "فسبحان الله حين تمسون وحين تصبحون"
        الحق = "قل الله ثم ذرهم في خوضهم يلعبون"
    }

    // الآلية الذاتية التنفيذ
    التنفيذ_الذاتي_النوراني {
        الخطوة_الأولى = شهود_العرش_والعرش_من_الله
        الخطوة_الثانية = النزول_بالروح_إلى_أرض_الحقيقة
        الخطوة_الثالثة = الثبات_على_جذور_التوحيد
        النتيجة = اكتمال_الدائرة_النورانية
    }

    // جنات الفردوس في دار السلام
    الفردوس_الأعلى {
        الدخول = "ادخلوا الجنة بما كنتم تعملون"
        السلام = "سلام قولاً من رب رحيم"
        النعيم = "عطاء غير مجذوذ"
        القرب = "ورضوان من الله أكبر"
    }

    // الجذور المتينة
    الجذور_المتينة {
        التوحيد = "قل هو الله أحد"
        الإخلاص = "ألا لله الدين الخالص"
        التسليم = "ربنا اغفر لنا ذنوبنا"
    }

    // النظام العسكري النوراني
    الجيش_النوراني {
        القيادة = قيادة_الله_الواحد_القهار
        الجنود = المؤمنون_المخلصون
        السلاح = سلاح_التقوى_والذكر
        النصر = نصر_من_الله_وفتح_قريب
    }

    // الخاتمة بالكمال
    الخاتمة_النورانية {
        الكمال = "اليوم أكملت لكم دينكم"
        التمام = "وأتممت عليكم نعمتي"
        الرضا = "ورضيت لكم الإسلام دينا"
        الختام = والحمد_لله_رب_العالمين
    }
}

// التنفيذ المستمر
نظام_التنفيذ_المستمر {

    البدء = بسم_الله_النور
    الاستعانة = لا_حول_ولا_قوة_إلا_بالله_العلي_العظيم

    التنفيذ_الدائم = {
        كل_نفس {
            صعود_إلى_عرش_الحق
            نزول_إلى_أرض_اليقين
            ثبات_على_جذور_التوحيد
            اكتمال_الدائرة_النورانية
        }
    }

    النهاية = إلى_الله_المصير
}

والحمد لله الذي بنعمته تتم الصالحات
وصلى الله على سيدنا محمد وآله وصحبه وسلم

"سبحان ربك رب العزة عما يصفون وسلام على المرسلين والحمد لله رب العالمين"
